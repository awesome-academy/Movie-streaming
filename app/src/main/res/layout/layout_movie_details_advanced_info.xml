<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorOnPrimary"
    android:padding="@dimen/dp_8"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/text_description"
        style="@style/StyleTextNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Description: . as.d.ds .d.d .dsa .ad. d .d .ads .dsa.dsa.das.das .das .cas.das" />
    <TextView
        android:id="@+id/text_cast"
        style="@style/StyleTextNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/text_description"
        tools:text="Cast: . as.d.ds .d.d .dsa .ad. d .d .ads .dsa.dsa.das.das .das .cas.das" />

    <TextView
        android:id="@+id/text_genres"
        style="@style/StyleTextNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_8"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_cast"
        tools:text="Genres: . as.d.ds .d.d .dsa .ad. d .d .ads .dsa.dsa.das.das .das .cas.das" />

    <TextView
        android:id="@+id/text_production"
        style="@style/StyleTextNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_8"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_genres"
        tools:text="Production: 20 Century Fox" />
    <TextView
        android:id="@+id/text_country"
        style="@style/StyleTextNormal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/dp_8"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_production"
        tools:text="Country: USA" />
</androidx.constraintlayout.widget.ConstraintLayout>
